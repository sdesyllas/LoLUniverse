@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("headerscripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LoLUniverse", "Index", "Home", new { area = "" }, new { @class = "navbar-brand uLogo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Leaderboards", "Index", "Leaderboard")</li>
                    <li>@Html.ActionLink("Champions", "Index", "Champions")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("ContentAdmin"))
                    {
                        <li class="redAdminText">@Html.ActionLink("News Admin", "Index", "NewsAdmin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content alpha60">

        @Html.Partial("_LogoArea", new LoLUniverse.Models.Search.SearchSummoner())

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LoLUniverse</p>
            <p>Powered by <a href="http://sdesyllas.github.io/RiotApi.NET/" target="_blank">RiotApi.Net</a> and <a href="http://ravendb.net/" target="_blank">RavenDB</a></p>
            <p>
                <img src="~/Content/Assets/PoweredBy/unipi.png" />
                 This project is completed under the University of Piraeus Advanced Software Engineering Master's program
            </p>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUi")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
